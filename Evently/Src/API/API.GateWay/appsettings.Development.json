{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "evently-route1": {
        "ClusterId": "evently-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          { "PathPrefix": "/api" }
        ]
      },
      "evently-route2": {
        "ClusterId": "evently-cluster",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "users/{**catchAll}"
        }
      }
    },
    "Clusters": {
      "evently-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://api.evently:8080"
          }
        }
      }
    }
  }
}
